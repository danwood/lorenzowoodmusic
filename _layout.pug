- var cloudPrefix = 'https://res.cloudinary.com/avfivcfiwkvgmspufqrh/image/upload/lwm/';
block prelude
doctype html
block vars
html(class="no-js", lang="en-us")
	head
		meta(charset="utf-8")
		<!--[if IE]><meta http-equiv='X-UA-Compatible' content='IE=edge'><![endif]-->
		//- Prefetch as early as possible (though charset needs to come first)
		link(rel="prefetch" href="//res.cloudinary.com")
		link(rel="prefetch" href="//fonts.googleapis.com")
		block meta
		block title
			title #{pageTitle} | Lorenzo Wood Music
		block description
			meta(name="description"
				content=description)
		meta(name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover")
		meta(name="supported-color-schemes" content="light dark")
		block openGraph
		block links
			link(href="https://fonts.googleapis.com/css?family=Montserrat:400,800&display=swap&subset=latin" rel="stylesheet")
			link(rel="apple-touch-icon" sizes="180x180" href=cloudPrefix + "apple-touch-icon.png")
			link(rel="icon" type="image/png" sizes="32x32" href=cloudPrefix + "favicon-32x32.png")
			link(rel="icon" type="image/png" sizes="16x16" href=cloudPrefix + "favicon-16x16.png")
			link(rel="stylesheet" href="/css/main.072920.css")
		block styles

	body(class=currentClass)
		<!--[if lt IE 10]>
			p.browserupgrade
				| You are using an #[strong outdated] browser. Please
				|
				a(href="http://browsehappy.com/") upgrade your browser
				|  to improve your experience.
		<![endif]-->


		header#main-header(class=herostyle)
			block header

				.logo
					block logo
						a(href="/", class={active: currentClass === 'home'})
							h1 Lorenzo Wood

					//- Hamburger Menu
					input#navigation(type="checkbox")
					label.hamburger(for="navigation")
						div.spinner.diagonal.part-1
						div.spinner.horizontal
						div.spinner.diagonal.part-2

					mixin navLink(link, name)
						li: a(
							href=link
							class={active: name === currentClass}
						) #{name}

					nav.page-menu
						ul
							+navLink('/', 'home')
							+navLink('/photos/', 'photos')
							+navLink('/videos/', 'videos')
							+navLink('/booking/', 'booking')
							+navLink('/2am-in-the-basement/', '2am')
							//- +navLink('/studio/', 'studio')
							//- +navLink('/projects/', 'projects')



		main
			block main

		block footer
			footer

				block footer-icons
					.icons.icons-5.icons-footer.safe-area-only
						.icon.instagram
							a(data-title="Instagram" href="https://instagram.com/LorenzoWoodMusic")
								svg: use(xlink:href="/svg/homepage.svg#instagram")
						.icon.smaller.facebook
							a(data-title="Facebook" href="https://facebook.com/LorenzoWoodMusic")
								svg: use(xlink:href="/svg/homepage.svg#facebook")
						.icon.youtube
							a(data-title="YouTube" href="https://www.youtube.com/lorenzowoodmusic")
								svg: use(xlink:href="/svg/homepage.svg#youtube")
						.icon.smaller
							a(data-title="Apple Music" href="https://geo.itunes.apple.com/us/artist/lorenzo-wood/1262743720?at=1000lKSp")
								include svg/homepage/apple-music-icon-color.svg
								//- Apple music icon doesn't show color when loaded with svg-use !!!
						.icon.spotify
							a(data-title="Spotify" href="https://open.spotify.com/artist/1rEOrX1GSkT1SJAsG1fBYA")
								svg: use(xlink:href="/svg/homepage.svg#spotify")
				p
					b Copyright Â© 2017-2020 Lorenzo Wood
					span.widespace
					block more-credits
					span.widespace
					|
					|
					a.contact-link(href="/contact/" class={active: currentClass === 'contact'}) Contact us
					span.widespace
					|
					|
					a.press-link(href="/press/" class={active: currentClass === 'press'}) Press & Media
				p.js-warning: noscript.
					JavaScript is disabled in your browser; please enable it to see missing content.

		block additional-html
		
		block scripts
			//- MINIMAL script block, but it's often extended with block append/prepend
			//- Modernizer-like
			//- Remove "no-js" class from element, if it exists
			script
				|document.documentElement.className = document.documentElement.className.replace("no-js","js");
				//- SVG for Everybody
				include js/svg4everybody-min.js
				|svg4everybody();


