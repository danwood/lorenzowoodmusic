extends ../_layout.pug


block vars
	- var title = 'Videos'
	- var current = 'Videos'
	- var description = 'Videos of songs, music snippets, and Lorenzo Wood at work making music'

block main
	section.youtube-section.balance-footer.requires-js.maximize-mobile
		header.ir(aria-hidden="true")
			h2 YouTube

		article.clearfix.textual
			each info in ['MbT0Vmne8-A:Los Altos Street Fair:July 2018. A compilation of eight songs Lorenzo sang at the Los Altos Art & Wine Festival. Many songs employ the VoiceLive 3 Extreme to add bass, percussion, and guitar effects.','COfT-rhxVD4:Busking in Walnut Creek, May 2018:Lorenzo had just turned sixteen so here is a compilation of … well, eighteen songs that Lorenzo performed while busking at the Walnut Creek Air on the Main festival in 2018.']
				.youtube-column
					.youtube-border
						.youtube.youtube-bordered(data-embed=info)

		article.clearfix
			each info in ['A8vcWMXVR7I:Imagine - John Lennon (Lorenzo Wood Cover):A live cover of the 1971 John Lennon classic.','70I6bRqtJfI:Shawn Mendes - In My Blood (Live Acoustic Cover):Lorenzo learned, recorded, and released this cover just a few hours after Shawn Mendes released this song on March 22, 2018.', 'ZMnSrxiWkBs:In The Air Tonight by Phil Collins (cover by Lorenzo Wood):A live looping version of the Phil Collins song. Programmed using Apple MainStage.']
				.youtube-column-3
					.youtube-border
						.youtube.youtube-bordered(data-embed=info)

		article.clearfix.textual
				.youtube-border
					.youtube(data-embed='RynQ3nswXyk:Shawn Mendes - Ruin (Lorenzo Wood Cover)')

		article.clearfix
			each info in ['ipoL1h1d7zA:Keith Urban - Female (Loop cover):A live looping cover. Voice, keyboards, synth percussion, bass, and guitar. Programmed using Apple MainStage.','FIN3qK-COZ8:Niall Horan - On My Own (Lorenzo Wood cover)','d87LW4xjATw:Khalid - Young Dumb & Broke (Lorenzo Wood cover):A simple live cover, with guest appearance by Capo the Dog.']
				.youtube-column-3
					.youtube-border
						.youtube.youtube-bordered(data-embed=info)

		article.clearfix.textual
				.youtube-border
					.youtube(data-embed='VHcn_Nr4_u4:Charlie Puth - Attention (Lorenzo Wood Cover):Multi-layered version with Lorenzo singing melody and harmonies, and playing guitar, keyboards, bass, percussion, and drum pads.')


		footer
			h3
				a(href="https://www.youtube.com/lorenzowoodmusic") More from YouTube

	p.js-required.
		JavaScript is disabled in your browser; please enable it to see missing content.

block scripts
	script
		include ../js/youtube-min.js
		//- Modernizer-like
		//- Remove "no-js" class from element, if it exists
		|document.documentElement.className = document.documentElement.className.replace("no-js","js");

